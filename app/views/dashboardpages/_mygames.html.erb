<div class="container mt-3 mb-3" style="background-color:rgba(70, 130, 180, 0.9);border-radius:15px">
    <h1 class="pl-1 my-1" style="color:white;padding:15px 0 5px 15px;">Mes challenges</h1>
    <br/>
    <div class="row">
        <% @games.each do |game| %>
            <div class="col-12 col-md-6 mb-3">
            <% if @user_game.find_by(game: game).unlocked %>
                <div class="card-product">
                <%= link_to game_path(game) do%>
                    <%= image_tag "logo-#{game.order}.svg" , class:"logo"%>
                <%end%>
                    <div class="card-product-infos">
                        <h2><%= game.title %></h2>
                        <% (game.difficulty).times do %>
                            <i class="fas fa-skull"></i>
                        <%end%>
                        <p><%= game.short_description %></p>
                        <%= image_tag "#{game.category}.svg" , class:"lang"%>
                    </div>
                </div>
            <% else %>
                <div class="card-product">
                    <%= image_tag "lock.svg", class:"logo" %>
                    <div class="card-product-infos">
                        <h2><%= game.title %></h2>
                        <% (game.difficulty).times do %>
                            <i class="fas fa-skull"></i>
                        <%end%>
                        <p><strong>Complètes un jeu pour déverouiller le suivant</strong></p>
                    </div>
                </div>
            <%end%>
            </div>
        <%end%>
        <% 3.times do %>
        <div class="col-12 col-md-6 mb-3">
            <div class="card-product">
                <%= image_tag "lock.svg", class:"logo" %>
                <div class="card-product-infos">
                    <h2>Jeu à venir</h2>
                    <% 3.times do %>
                        <i class="fas fa-skull"></i>
                    <%end%>
                    <p><strong>Complètes un jeu pour déverouiller le suivant</strong></p>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
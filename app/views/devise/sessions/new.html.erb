<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4" style="background-color: rgba(255, 255, 255, 0.7); border-radius: 4px; padding: 16px;">
      <h2>Connexion</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: "E-mail:",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: "Mot de passe:",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" ,class:"button-log"%>
        </div>
      <% end %>
<%#= render "devise/shared/links" %>
    </div>
  </div>
</div>


                <div id="6" class="draggable-item" draggable='true'><%="</a>"%></div>
            </div>
            <div id="game-4-input" style="color:white;background-color:#072A40;font-size:1.3em;height: 17.1875rem;">
                <div class="d-flex code-line"><div class="line-number">1</div>
                    <div><%='<div class="container">'%></div>
                </div>
                <div class="d-flex code-line">
                    <div class="line-number">2</div>
                    <div class="line-code">
                        <div class="draggable-zone"></div>
                        <%= "Le Wagon brings tech skills to creative people!" %>
                        <div class="draggable-zone"></div>
                    </div>
                </div>
                <div class="d-flex code-line">
                    <div class="line-number">3</div>
                    <div class="line-code">
                        <div class="draggable-zone"></div>
                        <%='Change your life and '%>
                        <%= "learn to code at one of our campuses around the world." %>
                        <div class="draggable-zone"></div>
                    </div>
                </div>
                <div class="d-flex code-line">
                    <div class="line-number">4</div>
                    <div  class="line-code">
                        <div class="draggable-zone"></div>
                        <%='Apply now'%>
                        <div class="draggable-zone"></div>
                    </div>
                </div>
                <div class="d-flex code-line"><div class="line-number">5</div>
                    <div class="line-code"><%='</div>'%></div>
                </div>
                <div class="d-flex code-line"><div class="line-number">6</div>
